pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Use Maven to build the code
                echo 'Building the code using Maven...'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                // Use JUnit and Selenium for unit and integration tests
                echo 'Running unit tests using JUnit...'
                echo 'Running integration tests using Selenium...'
            }
        }
        stage('Code Analysis') {
            steps {
                // Use SonarQube for code analysis
                echo 'Analyzing code using SonarQube...'
            }
        }
        stage('Security Scan') {
            steps {
                // Use OWASP ZAP for security scan
                echo 'Scanning code for security vulnerabilities using OWASP ZAP...'
            }
        }
        stage('Deploy to Staging') {
            steps {
                // Use AWS CLI to deploy to staging
                echo 'Deploying application to staging server using AWS CLI...'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                // Use Selenium for integration tests on staging
                echo 'Running integration tests on staging environment using Selenium...'
            }
        }
        stage('Deploy to Production') {
            steps {
                // Use AWS CLI to deploy to production
                echo 'Deploying application to production server using AWS CLI...'
            }
        }
    }
    
    post {
        success {
            // Send notification email with success status and logs attachment
            emailext body: "Pipeline passed successfully",
                subject: "Pipeline Success",
                attachmentsPattern: '**/*.log',
                to: "gaaaargi0809@gmail.com"
        }
        failure {
            // Send notification email with failure status and logs attachment
            emailext body: "Pipeline failed. Please check the logs for details.",
                subject: "Pipeline Failure",
                attachmentsPattern: '**/*.log',
                to: "gaaaargi0809@gmail.com"
        }
    }
}
