pipeline {
    agent any
    
    stages {
        stage('Stage 1: Build') {
            steps {
                // Build the code using Maven
                // Example command: sh 'mvn clean package'
                echo 'Building the code using Maven'
                // Replace this echo command with the actual build command
            }
        }
        
